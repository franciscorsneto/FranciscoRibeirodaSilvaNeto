-- Table struct for table `contato`

CREATE DATABASE forms;

USE forms;

CREATE TABLE IF NOT EXISTS pessoa (
id_pessoa int PRIMARY KEY AUTO_INCREMENT NOT NULL,
nome varchar(300) NOT NULL,
cidade varchar(300) NOT NULL,
estado varchar(150) NOT NULL
);

CREATE TABLE IF NOT EXISTS contato (
id_contato int PRIMARY KEY AUTO_INCREMENT NOT NULL,
cod_pessoa int,
email varchar(150) NOT NULL,
ddd varchar(3) NOT NULL,
telefone varchar(15) NOT NULL,
FOREIGN KEY(cod_pessoa) REFERENCES pessoa(id_pessoa)
);

CREATE TABLE IF NOT EXISTS statusmensagemenviada (
id_msg int PRIMARY KEY AUTO_INCREMENT NOT NULL,
cod_pessoa int,
cod_contato int,
assunto varchar(1000) NOT NULL,
mensagemenviada text NOT NULL,
retornosite text NOT NULL DEFAULT 'Sua mensagem Ã© muito importante, obrigado!',
FOREIGN KEY(cod_pessoa) REFERENCES pessoa(id_pessoa),
FOREIGN KEY(cod_contato) REFERENCES pessoa(id_contato)
);
