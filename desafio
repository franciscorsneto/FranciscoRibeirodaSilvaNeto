Create database TesteFranciscoRibeiro;

create table Tbl_pessoa (
	Id INT Primary Key,
    nome varchar(300) not null,
	cidade varchar(300) not null,
	estado varchar(150) not null
);

create table Tbl_contato (
Id INT Primary Key,
Id_contato INT,
Email VARCHAR (150) not null,
DDD VARCHAR (3) not null,
Telefone VARCHAR (15) not null,
Foreign Key(Id_pessoa) references Tbl_pessoa(Id)
);

create table Tbl_StatusMensagemEnviada (
Id INT Primary Key,
Id_pessoa INT,
Id_contato INT,
Assunto VARCHAR (1000) not null,
MensagemEnviada Text,
RetornoSite Text,
Foreign Key(Id_pessoa) references Tbl_pessoa(Id),
Foreign Key(Id_contato) references Tbl_contato(Id)
);
